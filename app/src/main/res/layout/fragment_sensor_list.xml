<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gachon_HCI_Lab.wear_os_sensor.SensorListFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_background">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sensor_recycler_view"
            android:layout_width="159dp"
            android:layout_height="130dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:scrollbarThumbVertical="@drawable/radius_box"
            android:scrollbars="vertical"
            tools:listitem="@layout/sensor_items" />

        <Button
            android:id="@+id/back"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@drawable/radius_box"

            android:layout_marginTop="5dp"
            android:layout_marginBottom="25dp"
            android:text="Back"/>

    </LinearLayout>
</FrameLayout>